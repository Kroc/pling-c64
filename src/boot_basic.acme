
* = $0801

boot_basic:
        !word @end              ; pointer to next BASIC line

        !word 1                 ; line-number
        !byte $9e               ; `SYS`

        ; address of machine-code address in decimal:
        !byte '0' + init % 10000 / 1000
        !byte '0' + init %  1000 /  100
        !byte '0' + init %   100 /   10
        !byte '0' + init %    10
        
        !byte 0                 ; end-of-line

@end:   !word $0000             ; end of BASIC program